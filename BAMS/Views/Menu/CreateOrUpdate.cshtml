@using BAMS.Data.Models
@using EightElements.Services;

@inject ITextService PageText
@{
    var id = ViewBag.Id;
    var data = ViewBag.Menu as AccessPermission;
    var clientLanguage = (string) ViewBag.ClientLanguage;
}


<div class="col-4">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@(id > 0 ? PageText.GetHtml("Update", clientLanguage) : PageText.GetHtml("Create", clientLanguage)) @PageText.GetHtml("Menu", clientLanguage)</h3>
        </div>
        <div class="card-body">
            <form method="post" action="" id="create-form">
                <input type="hidden" name="id" id="id" value="@id" placeholder="id">
                <div class="form-group">
                    <label>@PageText.GetHtml("Name", clientLanguage) </label>
                    <input class="form-control" type="text" name="name" id="name" value="@data?.Name" placeholder="name">
                </div>
                <div class="form-group">
                    <label>@PageText.GetHtml("Group", clientLanguage)  </label>
                    <input class="form-control" type="text" name="group" id="group" value="@data?.Group" placeholder="group">
                </div>
                <div class="form-group">
                    <label>@PageText.GetHtml("Permission", clientLanguage) </label>
                    <input class="form-control" type="number" name="permission" id="permission" value="@data?.Permission" placeholder="Permission">
                </div>
                @Html.AntiForgeryToken()
                <div class="form-group mt-2">
                    <button type="submit" class=" btn btn-primary">@(id > 0 ? PageText.GetHtml("Update", clientLanguage) : PageText.GetHtml("Create", clientLanguage))</button>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts{
    <script src="~/js/core/menu.js" type="application/javascript"></script>
}