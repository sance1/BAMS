                    <input type="checkbox" id="remember">
                    <label for="remember">
                        Remember Me
                    </label>
                </div>
            </div>
        </div>*@
    </form>
    <div class="acc">
        <img src="~/img/content/bg-fitur.jpg" />
    </div>
    @*<p class="mb-1">
