@using Microsoft.Extensions.Configuration
@inject IConfiguration _config
@using EightElements.Services
@inject ITextService PageText
@{
    var uid = ViewBag.Uid;
    Layout = "_LayoutLogin";
}

<div class="login-box" style="width:470px;">
    <h3 class="title-chg">@PageText.GetHtml("Change_password_title_txt_update_password","en")</h3>
    <form method="post" action="" id="change-password-form">
        <input type="hidden" name="uid" id="uid" value="@uid" placeholder="uid">
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">@PageText.GetHtml("Change_password_txt_new_password","en")</label>
            <div class="col-sm-8 input-group">
                <input type="password" class="form-control" name="password" id="password" maxlength="25" autocomplete="off" />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <small class="text-danger" id="passwordNotif"></small>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">@PageText.GetHtml("Change_password_txt_re_enter_password","en")</label>
            <div class="col-sm-8 input-group">
                <input type="password" class="form-control" name="confirm-password" id="confirm-password" autocomplete="off" />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
        </div>
        @Html.AntiForgeryToken()
        <div class="modal-footer">
            <button class="btn-green" type="submit"><i class="fa fa-user" aria-hidden="true"></i> &nbsp; @PageText.GetHtml("Change_password_btn_update","en")</button>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/js/core/account.js?version=@_config["Resources:Version"]" type="application/javascript"></script>
}